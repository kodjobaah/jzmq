<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical" >
    
       
     <LinearLayout android:id="@+id/sharing_status"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center" android:gravity="center_horizontal"
		android:orientation="vertical" android:visibility="gone">

		<ProgressBar style="?android:attr/progressBarStyleLarge"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="8dp" />

		<TextView android:id="@+id/invite_status_message"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:layout_marginBottom="16dp" 
			android:text="@string/share_video"
			android:textAppearance="?android:attr/textAppearanceMedium" />
	
	</LinearLayout>
	
<GridLayout 
    android:id="@+id/video_display"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="5"
    android:columnCount="3"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:keepScreenOn="true"
    tools:context=".DatabaseActivity" >
  
    
    <!-- -ROW 0 -->
     <Spinner
        android:id="@+id/selectCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/select_camera"
        android:layout_marginBottom="10dp"
 		android:layout_row="0"
		/>
    
     <LinearLayout
         android:id="@+id/momemts_frame"
          android:padding="4dp"
          android:layout_row="0"
          android:layout_column="1"
          android:layout_rowSpan="5"
          android:orientation="horizontal"
          android:background="@drawable/moments_frame">

       </LinearLayout>
  
         <Button  style="@style/btnStyleArsenic" 
    		 android:layout_row="1"
    		 android:layout_column="0"
             android:text="@string/start_video"
             android:layout_marginLeft="4dp"
             android:layout_marginRight="4dp"
             android:onClick="startVideo"
             android:clickable="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/start_video" >
            
         </Button>
    
      <Button  style="@style/btnStyleArsenic" 
             android:layout_row="2"
             android:layout_column="0"
             android:layout_marginTop="10dp"
             android:layout_marginLeft="4dp"
             android:layout_marginBottom="4dp"
              android:layout_marginRight="4dp"
             android:text="@string/start_transmission"
             android:onClick="startTransmission"
             android:clickable="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/start_transmission"  ></Button>
         
         <Button style="@style/btnStyleArsenic"
             android:layout_row="3"
             android:layout_column="0" 
             android:id="@+id/inviteButton"
              android:layout_marginTop="10dp"
             android:layout_marginLeft="4dp"
              android:layout_marginRight="4dp"
             android:clickable="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/find_invite" />
          
        <Button style="@style/btnStyleArsenic"
             android:layout_row="4"
             android:layout_column="0" 
             android:id="@+id/viewSharers"
              android:layout_marginTop="10dp"
             android:layout_marginLeft="4dp"
             android:layout_marginRight="4dp"
             android:clickable="true"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/view_sharers" /> 
     
</GridLayout>
</LinearLayout>